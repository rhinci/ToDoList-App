<Window x:Class="ToDoList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoList"
        mc:Ignorable="d"
        Title="ToDoList" Height="450" Width="800">
    <Grid x:Name="MainGrid" Background="#fcedd3" >
        <Grid.RowDefinitions>
            <RowDefinition Height="17*" />
            <RowDefinition Height="183*" />
            <RowDefinition Height="17*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="285*" />
            <ColumnDefinition Width="285*" />
            <ColumnDefinition Width="230*" />
        </Grid.ColumnDefinitions>

        <Frame Grid.Column="2" Grid.Row="0" Grid.RowSpan="3" Background="#015185"></Frame>
        <TextBlock Grid.Column="2" FontSize="30" FontFamily="Britannic Bold" VerticalAlignment="Center" TextAlignment="Center" Foreground="#cea273" Height="33">Categories</TextBlock>

        <DataGrid x:Name="TasksDataGrid" Grid.Column="0" Grid.Row="0"  Grid.ColumnSpan="2" Grid.RowSpan="2" Background="#fcedd3" Foreground="#015185" Margin="10,10,10,10" ItemsSource="{Binding Tasks}" 
                  AutoGenerateColumns="False"
                  PreviewKeyDown="DataGrid_PreviewKeyDown" FontSize="16" FontFamily="Britannic Bold">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Is Done">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <RadioButton IsChecked="{Binding IsCompleted}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" />
                <DataGridTextColumn Header="Category (1-10)" Binding="{Binding Category}" />
                <DataGridTemplateColumn Header="Date">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <DatePicker SelectedDate="{Binding DueDate}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Priority" Binding="{Binding Priority}" />
                <DataGridTextColumn Header="Description (optional)" Binding="{Binding Description}" Width="*"/>
            </DataGrid.Columns>

        </DataGrid>
        <Button Grid.Column="0" Background="#cea273" Foreground="#015185" Grid.Row="2" Content="Add Task" Click="AddTaskButton_Click" Margin="5" FontSize="16" FontFamily="Britannic Bold" />
        <Button Grid.Column="1" Background="#cea273" Foreground="#015185" Grid.Row="2" Content="Delete Task" Click="DeleteTaskButton_Click" Margin="5" FontSize="16" FontFamily="Britannic Bold"></Button>

        <ItemsControl Grid.Column="2" Grid.Row="1" ItemsSource="{Binding Categories}" Margin="30" FontSize="25" FontFamily="Britannic Bold" Foreground="#cea273">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

    </Grid>




</Window>
