<Window x:Class="ToDoList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoList"
        mc:Ignorable="d"
        Title="ToDoList" Height="450" Width="800">
    <Grid x:Name="MainGrid" Background="#fcedd3" >
        <Grid.RowDefinitions>
            <RowDefinition Height="35*" />
            <RowDefinition Height="383*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" Grid.Row="0" FontSize="30" FontFamily="Britannic Bold" Foreground="#102a6b" Background="#fcedd3" >Active tasks</Button>
        <Button Grid.Column="1" Grid.Row="0" FontSize="30" FontFamily="Britannic Bold" Foreground="#102a6b" Background="#fcedd3">Trash</Button>
        <Frame Grid.Column="2" Grid.Row="0" Grid.RowSpan="2" Background="#015185"></Frame>
        <TextBlock Grid.Column="2" Grid.Row="0" FontSize="30" FontFamily="Britannic Bold" VerticalAlignment="Center" TextAlignment="Center" Foreground="#cea273">Categories</TextBlock>

        <DataGrid Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Grid.RowSpan="2" Background="#fcedd3" Margin="10">
            
        </DataGrid>

    </Grid>




</Window>
